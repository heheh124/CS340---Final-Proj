<h1>Handguns Database</h1>

<table width="800">
	<col width="200">
	<col width="200">
	<col width="200">
	<col width="200">
	<style>
		table {border: 2px solid black;}
		td, th {border: 1px solid black}
		th {background: #AED6F1;}
	</style>
    <thead> 
        <th>Handgun Brand</th> 
        <th>Handgun Model</th> 
        <th>Handgun Caliber</th>
        <th>Handgun Barrel Length</th>  
    </thead> 
    <tbody> 
        {{#each handguns}} 
        <tr> 
            <td align="center">{{handguns_brand}}</td> 
            <td align="center">{{handguns_model}}</td> 
            <td align="center">{{handguns_caliber}}</td> 
            <td align="center">{{handguns_barrel_length}}</td>
            <td style="border: 0px;"><button onclick="deletePistol({{handguns_id}})">Delete</button></td>
            <td style="border: 0px;"><a href="/handguns/{{handguns_id}}">Update</a></td>
        </tr> 
        {{/each}}	
    </tbody>
	
	<h5>Please fill in the following information to populate the table below.</h5>
	<form id="addhandgun" action="/handguns" method="post">
    Handgun Brand: <input type="text" name="handguns_brand"><br>
    Handgun Model: <input type="text" name="handguns_model"><br>
    Caliber: <select name="handguns_caliber"> 
        {{#each ammunition_caliber}}
        <option value="{{ammunition_id}}">{{ammunition_caliber}}</option>
        {{/each}}
    </select><br>
    Handgun Barrel Length: <input type="number" name="handguns_barrel_length"><br>
    <input type="submit" value="Submit">
    </form>
	<br><br>
</table>
