<h1>Current handguns:</h1>
<h1>Handlebars JS Example</h1>
{{#each foo}}
{{this}}
{{/each}}
<table>
    <thead> 
        <th>Handguns Brand</th> 
        <th>Handguns Model</th> 
        <th>Handguns Caliber</th>
        <th>Handguns Barrel Length</th>  
    </thead> 
    <tbody> 
        {{#each handguns}} 
        <tr> 
            <td>{{handguns_brand}}</td> 
            <td>{{handguns_model}}</td> 
            <td>{{handguns_caliber}}</td> 
            <td>{{handguns_barrel_length}}</td>
            <td><button onclick="deleteHandguns({{id}})">Delete</button></td>
            <td><a href="/handguns/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
	
    <form id="addhandgun" action="/handguns" method="post">
    Brand: <input type="text" name="handguns_brand"><br>
    Model: <input type="text" name="handguns_model"><br>
    Caliber: <select name="handguns_caliber"> 
        {{#each handguns_caliber}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Barrel Length: <input type="text" name="handguns_barrel_length"><br>
    <input type="submit" value="Submit">
    </form>
</table> 